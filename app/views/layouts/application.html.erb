<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Incident Impact Tracker" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Incident Impact Tracker" %>">
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%# application layout styled for Twitter Bootstrap 2.3 %>
      <header class="navbar navbar-fixed-top">
        <nav class="navbar-inner">
          <div class="container">
            <%= render 'layouts/navigation' %>
          </div>
        </nav>
      </header>                                          
    <main role="main">
      <div class="container">
        <div class="content">
           <div class="row">
            <div class="span12">
              <%= render 'layouts/messages' %>
              <% if current_user %>
              <%= yield %>
              <% else %>
                <div class="alert alert-error">
                  <p> You aren't logged in! </p>
                </div>
              <% end %>
            </div>
          </div>
          <footer>
          </footer>
        </div>
      </div>
    </main>
    <%= render :partial => '/sessions/form', :user => @user %>  
  </body>
</html>
